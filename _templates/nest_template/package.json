{
  "name": "backend-template-nest",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@clickhouse/client": "^1.12.1",
    "@infinityloop.labs/nest-connectors": "file:../../packages/nest-connectors",
    "@nestjs/common": "^10.4.13",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.13",
    "@nestjs/microservices": "^10.4.13",
    "@nestjs/platform-express": "^10.4.13",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/terminus": "^10.3.0",
    "@nestjs/typeorm": "^10.0.2",
    "cassandra-driver": "^4.8.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "ioredis": "^5.7.0",
    "kafkajs": "^2.2.4",
    "minio": "^8.0.6",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.28"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/node": "^22.13.1",
    "@types/pg": "^8.15.6",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "npm run start:dev",
    "start": "node dist/main.js",
    "start:dev": "nodemon --watch src --ext ts,json --exec \"npm run build && node dist/main.js\"",
    "typeorm": "typeorm-ts-node-commonjs -d ./src/database/typeorm.data-source.ts",
    "migration:create": "npm run typeorm -- migration:create ./src/database/migrations/$npm_config_name",
    "migration:generate": "npm run typeorm -- migration:generate ./src/database/migrations/$npm_config_name",
    "migration:run": "npm run typeorm -- migration:run",
    "migration:revert": "npm run typeorm -- migration:revert",
    "migration:show": "npm run typeorm -- migration:show",
    "test:domain": "echo 'Domain tests scaffolded; configure jest runtime in next iteration.'"
  }
}
