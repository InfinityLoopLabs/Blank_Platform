{
  "name": "backend-template-nest",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@clickhouse/client": "^1.12.1",
    "@infinityloop.labs/nest-connectors": "file:../../packages/nest-connectors",
    "@nestjs/common": "^10.4.13",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.13",
    "@nestjs/microservices": "^10.4.13",
    "@nestjs/platform-express": "^10.4.13",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/terminus": "^10.3.0",
    "cassandra-driver": "^4.8.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "ioredis": "^5.7.0",
    "kafkajs": "^2.2.4",
    "minio": "^8.0.6",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/node": "^22.13.1",
    "@types/pg": "^8.15.6",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "npm run start:dev",
    "start": "node dist/main.js",
    "start:dev": "nodemon --watch src --ext ts,json --exec \"npm run build && node dist/main.js\"",
    "migration:postgres:status": "ts-node --project ./tsconfig.json ./src/migrations/cli.ts postgres status",
    "migration:postgres:up": "ts-node --project ./tsconfig.json ./src/migrations/cli.ts postgres up",
    "migration:postgres:down": "ts-node --project ./tsconfig.json ./src/migrations/cli.ts postgres down",
    "migration:clickhouse:status": "ts-node --project ./tsconfig.json ./src/migrations/cli.ts clickhouse status",
    "migration:clickhouse:up": "ts-node --project ./tsconfig.json ./src/migrations/cli.ts clickhouse up",
    "migration:clickhouse:down": "ts-node --project ./tsconfig.json ./src/migrations/cli.ts clickhouse down",
    "migration:scylla:status": "ts-node --project ./tsconfig.json ./src/migrations/cli.ts scylla status",
    "migration:scylla:up": "ts-node --project ./tsconfig.json ./src/migrations/cli.ts scylla up",
    "migration:scylla:down": "ts-node --project ./tsconfig.json ./src/migrations/cli.ts scylla down",
    "migration:all:status": "npm run migration:postgres:status && npm run migration:clickhouse:status && npm run migration:scylla:status",
    "migration:all:up": "npm run migration:postgres:up && npm run migration:clickhouse:up && npm run migration:scylla:up",
    "migration:all:down": "npm run migration:scylla:down && npm run migration:clickhouse:down && npm run migration:postgres:down",
    "test:domain": "echo 'Domain tests scaffolded; configure jest runtime in next iteration.'"
  }
}
