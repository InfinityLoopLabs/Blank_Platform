{
  "extends": [
    "@npm.piece/eslint-config"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["@core", "./src/platform"],
          ["@features", "./src/features"]
        ],
        "extensions": [
          ".js",
          ".ts"
        ]
      }
    }
  }
}
