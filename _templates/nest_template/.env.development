# App
APP_ENV=development
APP_PORT=3000
NODE_ENV=development

# HTTP
# Empty means: in non-production CORS is open, in production disabled.
CORS_ORIGINS=
SWAGGER_ENABLED=true

# Observability
SCHEMA_MODE=ok
OTEL_SIDECAR_ENDPOINT=localhost:4317
OTEL_SIDECAR_AVAILABLE=true

# Connectors feature flags
# `false` disables module registration; any other value enables it.
POSTGRES_ENABLED=true
CLICKHOUSE_ENABLED=true
SCYLLA_ENABLED=true
REDIS_ENABLED=true
KAFKA_ENABLED=true
MINIO_ENABLED=true

# PostgreSQL (local infra: 20432)
POSTGRES_HOST=localhost
POSTGRES_PORT=20432
POSTGRES_DB=app
POSTGRES_USER=app
POSTGRES_PASSWORD=app

# ClickHouse (local infra: 20123)
CLICKHOUSE_URL=http://localhost:20123
# Alias synced with local-infra/.env.example
CLICKHOUSE_DB=default
CLICKHOUSE_DATABASE=${CLICKHOUSE_DB}
CLICKHOUSE_USER=app
CLICKHOUSE_PASSWORD=app
CLICKHOUSE_TIMEOUT_MS=5000

# ScyllaDB (local infra: 20042)
SCYLLA_CONTACT_POINTS=localhost:20042
SCYLLA_LOCAL_DC=datacenter1
SCYLLA_KEYSPACE=
SCYLLA_USERNAME=
SCYLLA_PASSWORD=

# Redis (local infra: 20379)
REDIS_HOST=localhost
REDIS_PORT=20379
REDIS_DB=0
REDIS_PASSWORD=

# Kafka (local infra: 20092)
KAFKA_CLIENT_ID=sample-nest
KAFKA_GROUP_ID=sample-nest-group
KAFKA_BROKERS=localhost:20092

# MinIO S3 (local infra: 20000)
MINIO_ENDPOINT=localhost
MINIO_PORT=20000
MINIO_USE_SSL=false
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_ACCESS_KEY=${MINIO_ROOT_USER}
MINIO_SECRET_KEY=${MINIO_ROOT_PASSWORD}
MINIO_REGION=us-east-1
